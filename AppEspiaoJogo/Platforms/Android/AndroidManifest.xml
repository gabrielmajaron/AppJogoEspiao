<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="AppJogoEspiao.AppJogoEspiao">
	
<application 
    android:allowBackup="true" 
    android:icon="@mipmap/appicon" 
    android:supportsRtl="true" 
    android:label="Jogo Espião">

    <!-- Definindo o Foreground Service corretamente -->
    <service
        android:name="com.example.AppEspiaoJogo.ServerSocketForegroundService"
        android:exported="true"
        android:foregroundServiceType="remoteMessaging" />

    <service
        android:name="com.example.AppEspiaoJogo.ClientSocketForegroundService"
        android:exported="true"
        android:foregroundServiceType="remoteMessaging" />
</application>

    <!-- Permissões necessárias -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_REMOTE_MESSAGING" />
</manifest>
