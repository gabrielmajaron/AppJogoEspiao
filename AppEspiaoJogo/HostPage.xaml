<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEspiaoJogo.HostPage"
             BackgroundImageSource="background.jpg">
    
        <Grid Padding="20">

        <Grid.GestureRecognizers>
            <TapGestureRecognizer NumberOfTapsRequired="2"
                                  Tapped="OnPageDoubleTapped"/>
        </Grid.GestureRecognizers>
            
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />            
            <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Padding="20" Grid.ColumnSpan="2" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label 
            Text="Jogadores:" 
            Grid.Row="0" 
            Grid.Column="0" 
            HorizontalOptions="Start" 
            VerticalOptions="End" 
            FontSize="20" 
            FontAttributes="Bold" 
            TextColor="White" 
            LineBreakMode="NoWrap" />

            <Label 
            Text="0" 
            x:Name="ConnectedPlayersCount" 
            Grid.Row="0" 
            Grid.Column="1" 
            Grid.ColumnSpan="2" 
            HorizontalOptions="Center" 
            VerticalOptions="End" 
            FontSize="20" 
            TextColor="White" />

            <Label 
            Text="Jogo NÂº:" 
            Grid.Row="1" 
            Grid.Column="0" 
            HorizontalOptions="Start" 
            VerticalOptions="Center" 
            FontSize="20" 
            FontAttributes="Bold" 
            TextColor="White" 
            LineBreakMode="NoWrap" />
            
            <Label 
            Text="0" 
            x:Name="GameNumber" 
            Grid.Row="1" 
            Grid.Column="1" 
            Grid.ColumnSpan="2" 
            HorizontalOptions="Center" 
            VerticalOptions="Center" 
            FontSize="20" 
            TextColor="White" />

            <Label 
            Text="Palavra:" 
            Grid.Row="2" 
            Grid.Column="0" 
            HorizontalOptions="Start" 
            VerticalOptions="Center" 
            FontSize="20" 
            FontAttributes="Bold" 
            TextColor="White" 
            LineBreakMode="NoWrap" />
            
            <Label 
            Text="-" 
            x:Name="GameWord" 
            Grid.Row="2" 
            Grid.Column="1" 
            Grid.ColumnSpan="2" 
            HorizontalOptions="Center" 
            VerticalOptions="Center" 
            FontSize="20" 
            TextColor="White" />

        </Grid>


        <Grid Grid.Row="3" Grid.ColumnSpan="2" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button 
            VerticalOptions="End" 
            Grid.Row="0"
            Text="Iniciar Servidor" 
            x:Name="StartServerButton" 
            Clicked="StartServer_Clicked" 
            TextColor="White" 
            BackgroundColor="#1e508d"
            FontAttributes="Bold"/>
            
            <Button     
                VerticalOptions="End"                 
                Grid.Row="1"
                Text="Iniciar Jogo" 
                IsEnabled="False"
                x:Name="StartGameButton" 
                Clicked="StartGame_Clicked"                
                TextColor="White" 
                BackgroundColor="#1e508d"
                FontAttributes="Bold"/>

            <Button                 
                Grid.Row="1"
                Text="Proximo Jogo" 
                IsVisible="False"
                x:Name="NextGameButton" 
                Clicked="NextGame_Clicked" 
                TextColor="White" 
                BackgroundColor="#1e508d"
                FontAttributes="Bold"/>

        </Grid>
        </Grid>


</ContentPage>